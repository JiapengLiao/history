<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljp.history.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.ljp.history.entity.User">
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="password" jdbcType="VARCHAR" property="password" />
    </resultMap>
    <!--查询用户信息-->
    <select id="getUserInfo" resultType="com.ljp.history.entity.User">
        select * from user where username = #{username}
    </select>
    <!--删除用户信息-->
    <delete id="deleteById" parameterType="int">
        delete from user where username=#{username}
    </delete>
    <!--返回所有用户信息-->
    <select id="selectAll"  resultType="com.ljp.history.entity.User">
        select * from user
    </select>

    <!--增加用户信息-->
    <insert id="save" parameterType="com.ljp.history.entity.User" >
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="username != null" >
                username,
            </if>
            <if test="password != null" >
                password,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="username != null" >
                #{username,jdbcType=VARCHAR},
            </if>
            <if test="password != null" >
                #{password,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <!--根据id更改用户信息-->
    <update id="update" parameterType="com.ljp.history.entity.User">
        update user
        <set >
            <if test="password != null" >
                password = #{password,jdbcType=VARCHAR},
            </if>
        </set>
        where username = #{username,jdbcType=INTEGER}
    </update>
</mapper>